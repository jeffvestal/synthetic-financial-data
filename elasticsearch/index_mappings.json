{
  "financial_asset_details": {
    "settings": {
      "index.mode": "lookup"
    },
    "mappings": {
      "properties": {
        "symbol": {
          "type": "keyword"
        },
        "asset_name": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            },
            "semantic_text": {
              "type": "semantic_text",
              "inference_id": ".elser-2-elasticsearch"
            }
          }
        },
        "instrument_type": {
          "type": "keyword"
        },
        "sector": {
          "type": "keyword"
        },
        "index_membership": {
          "type": "keyword"
        },
        "country_of_origin": {
          "type": "keyword"
        },
        "current_price": {
          "type": "object",
          "properties": {
            "price": {
              "type": "float"
            },
            "last_updated": {
              "type": "date"
            }
          }
        },
        "previous_closing_price": {
          "type": "object",
          "properties": {
            "price": {
              "type": "float"
            },
            "prev_close_date": {
              "type": "date"
            }
          }
        },
        "bond_details": {
          "type": "object",
          "properties": {
            "issuer": {
              "type": "keyword"
            },
            "maturity_date": {
              "type": "date"
            },
            "coupon_rate": {
              "type": "float"
            }
          }
        },
        "last_updated": {
          "type": "date"
        }
      }
    }
  },
